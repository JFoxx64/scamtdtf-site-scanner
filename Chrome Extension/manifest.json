{
  "manifest_version": 3,
  "name": "Scam Takedown Task Force Site Scanner",
  "version": "0.15",
  "description": "Scans websites against the Scam Takedown Task Force database and warns you if a site is in our Database",
  "icons": {
    "64": "icons/STDTF.ico"
  },

  "host_permissions": [
    "*://scamtdtf.com/*"
  ],

  "action": {
    "default_icon": "icons/STDTF.ico",
    "theme_icons": [{
        "light": "icons/STDTF.ico",
        "dark": "icons/STDTF.ico",
        "size": 64
    }],
    "default_title": "Scam Takedown Task Force"
  },

  "background": {
    "service_worker": "background/background.js",
    "type" : "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/sitecheck.js"]
    }
  ]
}